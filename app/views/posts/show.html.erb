<div class="content-box">
  <div class="user-content">
    <div class="usr-img">
      <%= link_to (image_tag @post.user.image.url(:small)), '/profile/' + @post.user.id.to_s %>
    </div>
    <div class="other-details">
      <span class="user-name">
        <%= @post.user.name.upcase %>
      </span>
      <span class="follow-link">
      <% if user_signed_in? %>
          <% if current_user.can_follow @post.user.id %>
            <%= link_to "FOLLOW", url_for(controller: :home, action: :follow, followee_id: @post.user.id), method: :post, class: "button-follow" %>
          <% end %>

            <% if current_user.can_unfollow @post.user.id %>
            <%= link_to "UNFOLLOW", url_for(controller: :home, action: :unfollow, followee_id: @post.user.id), method: :post, class: "button-follow" %>
          <% end %>
      <% end %>
    </span>
      <br>
      <br>
      <div class="cr-time">
        <%= @post.created_at.strftime("%d %B %Y") %>
      </div>
    </div>

    <p id="edit-del">
    <span>
    <% if @post.user == current_user %>
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </span>
    </p>

    <br>
  </div>
  <br>
  <hr class="hr-asdf">
  <br>
  <h1 class="title"><%= @post.title.capitalize %></h1>
  <br><br>
  <p class="body"><%= simple_format(@post.body, {}, :sanitize => false) %></p>
  <br>
  <br>
  <hr class="hr-asdf">



  <aside class="vote-count bind-<%= @post.id %>">
    <%= link_to like_post_path(@post), method: :put, remote: true, class: 'like' do %>
        <i class="fa fa-thumbs-up"></i>
        <span class="like_count-<%= @post.id %>"><%= @post.get_upvotes.size %></span>
    <% end %>
    <%= link_to dislike_post_path(@post), method: :put, remote: true, class: 'dislike' do %>
        <i class="fa fa-thumbs-down"></i>
        <span class="dislike_count-<%= @post.id %>"><%= @post.get_downvotes.size %></span>
    <% end %>
  </aside>

</div>

<br><br><br>
<div id="comments">
  <h2><%= @post.comments.count %> Comments</h2>
  <br>
  <%= render @post.comments, post: @post %>
  <%= render "comments/form" %>
</div>
