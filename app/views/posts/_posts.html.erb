<% @posts.each do |post| %>
<div class="post">
  <div class="image"><%= link_to (image_tag post.image.url(:medium)), post %></div>
  <h2 id="title"><%= link_to post.title.capitalize, post %></h2>

  <hr>
  <div id="content">
    <span><%=h truncate(post.body, :length => 100) %> <%= link_to "READ MORE", post, {:style => 'text-decoration: none; color: green;'}%></span>
  </div>
  <hr>

  <div class="row1">
            <span>
              -- <%= link_to post.user.name.capitalize, '/profile/' + post.user.id.to_s, {:style => 'text-decoration: none; color: brown;'}%>
            </span>
    <span>
              <i class="fa fa-comments-o"></i>
      <%= post.comments.count %>

      <i class="fa fa-heart" aria-hidden="true"></i>
      <%= post.get_upvotes.size %>
            </span>
  </div>
  <br style="line-height: 200%;">

  <div class="time">--
    <%= time_ago_in_words(post.created_at) %> ago
  </div>
</div>
<% end %>