<% @users.each do |user| %>
    <div class="user">
      <div class="user-image">
        <%= link_to '/profile/'+user.id.to_s do %>
            <%= image_tag user.image.url(:medium) %>
        <% end %>
      </div>

      <div class="user-details">
        <h3><%= link_to user.name.capitalize, '/profile/' + user.id.to_s %></h3>
        <div class="email"><%= user.email %></div>
        <div class="link followLink-<%= user.id %>">
          <%= render 'home/follow_2', user: user %>
        </div>
      </div>
      <div class="follows">
        <div class="followers">Followers:
          <span class="follow-num-f<%= user.id %>"> <%= FollowMapping.where(followee_id: user.id).pluck(:follower_id).length %></span></div>
        <div class="followees">Following:
          <span class="follow-num-uf<%= user.id %>"> <%= FollowMapping.where(follower_id: user.id).pluck(:followee_id).length %></span></div>
      </div>
    </div>
    <hr id="hor">
<% end %>