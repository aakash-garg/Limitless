<h1>Users</h1>

<% @users.each do |user| %>

    <h3><%= link_to user.name, '/profile/' + user.id.to_s %></h3>

    <%= user.email %> <% if current_user.can_follow user.id %>
        <%= link_to "Follow", url_for(controller: :home, action: :follow, followee_id: user.id), method: :post %>
    <% end %>

    <% if current_user.can_unfollow user.id %>
        <%= link_to "UnFollow", url_for(controller: :home, action: :unfollow, followee_id: user.id), method: :post %>
    <% end %>
  <hr>
<% end %>